@model Haidelberg.Vehicles.DataAccess.EF.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Production Year</dt>
        <dd class="col-sm-10">@Model.ProductionYear</dd>
        <dt class="col-sm-2">Last Registration Date</dt>
        <dd class="col-sm-10">@Model.LastRegistrationDate</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">Licence Plate</dt>
        <dd class="col-sm-10">@Model.LicencePlate</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
    </dl>
    
    <form action="/Vehicles/Delete/@Model.Id" method="post">
        <input class="btn btn-danger" type="submit" value="Delete" /> |
        <a class="btn btn-info" href="/vehicles">Back to List</a>
    </form>
</div>
