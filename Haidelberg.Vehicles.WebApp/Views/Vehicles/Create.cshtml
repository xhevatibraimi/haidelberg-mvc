@model Haidelberg.Vehicles.DataAccess.EF.Vehicle

<form action="/vehicles/create" method="post">

    @Html.DisplayErrors((List<string>)ViewBag.Errors)

    <div class="form-group">
        <label for="ProductionYear">Production Year</label>
        <input id="ProductionYear" type="number" name="ProductionYear" value="@Model.ProductionYear" />
    </div>

    <div class="form-group">
        <label for="LastRegistrationDate">Last Registration Date</label>
        <input id="LastRegistrationDate" type="date" name="LastRegistrationDate" value="@Model.LastRegistrationDate.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="Model">Model</label>
        <input id="Model" type="text" name="Model" value="@Model.Model" />
    </div>

    <div class="form-group">
        <label for="LicencePlate">Licence Plate</label>
        <input id="LicencePlate" type="text" name="LicencePlate" value="@Model.LicencePlate" />
    </div>

    <div class="form-group">
        <label for="Model">Category</label>
        <select name="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                if (Model.CategoryId == category.Id)
                {
                    <option value="@category.Id" selected>@category.Name</option>
                }
                else
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
    </div>

    <input class="btn btn-success" type="submit" value="Create" />
</form>