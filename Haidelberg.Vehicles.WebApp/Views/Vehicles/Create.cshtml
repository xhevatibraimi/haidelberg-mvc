<form action="/vehicles/create" method="post">

    <div class="form-group">
        <label for="ProductionYear">Production Year</label>
        <input id="ProductionYear" type="number" name="ProductionYear" />
    </div>

    <div class="form-group">
        <label for="LastRegistrationDate">Last Registration Date</label>
        <input id="LastRegistrationDate" type="date" name="ProducLastRegistrationDatetionYear" />
    </div>

    <div class="form-group">
        <label for="Model">Model</label>
        <input id="Model" type="text" name="Model" />
    </div>

    <div class="form-group">
        <label for="LicencePlate">Licence Plate</label>
        <input id="LicencePlate" type="text" name="LicencePlate" />
    </div>

    <div class="form-group">
        <label for="Model">Category</label>
        <select>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <input class="btn btn-success" type="submit" value="Create" />
</form>