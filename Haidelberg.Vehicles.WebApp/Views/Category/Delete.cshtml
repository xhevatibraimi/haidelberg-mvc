@model Haidelberg.Vehicles.DataAccess.EF.Category

@if (ViewBag.ErrorMessage != null)
{
    <div class="form-group">
        <span class="text-danger">@ViewBag.ErrorMessage</span>
    </div>
}
<p>Are you sure you want to delete the category <b>@Model.Name</b></p>

<a class="btn btn-success" href="/category">No</a>
<form action="/category/delete/@Model.Id" method="post">
    <input class="btn btn-danger" type="submit" value="Yes" />
</form>
